@model VocabHero.Models.FlashCardUserAttempt.FlashCardUserAttemptCreate


    <section class="text-center align-content-sm-center" style="padding:8%;">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @TempData["UnsuccessfulAttempt"]
            <div class="card rounded bg-secondary" style="width:25vw;min-width:300px; height:auto; margin-left:35%;">


                <div class="card-header text-center bg-transparent border-0">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group text-center">
                        <div class="text-center">
                            <span class="text-center" style="padding:30px;font-style:italic;">

                                <strong>@Html.DisplayFor(model => model.UserFlashCard.Definition, new { @class = "text-center" })</strong>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body text-center">
                    <div class="form-group">
                        <div class="text-center" style="padding-left:9%;">
                            @Html.EditorFor(model => model.Guess, new { htmlAttributes = new { @class = "form-control align-content-center", } })
                            @Html.ValidationMessageFor(model => model.Guess, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.UserFlashCard.Word)
                            @Html.HiddenFor(model => model.UserFlashCard.UserCardId)
                            @Html.HiddenFor(model => model.UserFlashCard.PartOfSpeech)
                            @Html.HiddenFor(model => model.UserFlashCard.Definition)
                            @Html.HiddenFor(model => model.IsSuccessful)
                            @Html.HiddenFor(model => model.XPGained)
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center bg-transparent border-0">

                    <div class="form-group text-center">
                        <div >
                            <input type="submit" method="post" value="Submit" class="btn btn-dark" />
                        </div>
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to Cards", "Index", "UserFlashCard")
            </div>

        }


    </section>
