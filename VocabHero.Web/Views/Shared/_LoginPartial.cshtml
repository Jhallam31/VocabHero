@using Microsoft.AspNet.Identity
@Styles.Render("~/Content/css")


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav ml-auto">
            <li  class="list-class"style="padding-right:5px;">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "color:white; text-decoration:none;" })
            </li>
            <li class="list-class" style="padding-left:5px;"><a href="javascript:document.getElementById('logoutForm').submit()" style="color:white; text-decoration:none;">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li class="list-class">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @style = " color: white;", id = "loginLink" })</li>
    </ul>
}
