@model VocabHero.Models.FlashCardUserAttempt.FlashCardUserAttemptCreate


<section style="padding:8%;">

@using (Html.BeginForm("Create", "FlashCardUserAttempt", FormMethod.Post, new { @class = "card card-info", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group text-center">
            <div class="col-md-10 text-center">
                @Html.DisplayFor(model => model.UserFlashCard.Definition)
            </div>
        </div>
        <div class="form-group align-content-center text-center">
            <div class="col-md-10 text-center">
                @Html.EditorFor(model => model.Guess, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Guess, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Cards", "Index", "UserFlashCard")
</div>
</section>
