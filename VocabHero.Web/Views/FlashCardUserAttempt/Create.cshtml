@model VocabHero.Models.FlashCardUserAttempt.FlashCardUserAttemptCreate


<section style="padding:8%;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    
    @TempData["UnsuccessfulAttempt"]
        <div class="card rounded bg-primary" style="width:35%; height:auto;">
            

                <div class="card-header text-center bg-transparent border-0">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group text-center">
                        <div class="col-md-10 text-center">
                            <span style="padding:30px;font-style:italic;">

                                @Html.DisplayFor(model => model.UserFlashCard.Definition)
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body text-center">
                    <div class="form-group">
                        <div class="text-center">
                            @Html.EditorFor(model => model.Guess, new { htmlAttributes = new { @class = "form-control", } })
                            @Html.ValidationMessageFor(model => model.Guess, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.UserFlashCard.Word)
                            @Html.HiddenFor(model => model.UserFlashCard.UserCardId)
                            @Html.HiddenFor(model => model.UserFlashCard.PartOfSpeech)
                            @Html.HiddenFor(model => model.UserFlashCard.Definition)
                            @Html.HiddenFor(model => model.IsSuccessful)
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center bg-transparent border-0">

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" method="post" value="Submit" class="btn btn-dark" />
                        </div>
                    </div>
                </div>
            </div>
        
    }

    <div>
        @Html.ActionLink("Back to Cards", "Index", "UserFlashCard")
    </div>
</section>
