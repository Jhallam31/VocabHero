@model IEnumerable<VocabHero.Models.FlashCardUserAttempt.FlashCardUserAttemptListItem>

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid text-center">
    <h2 class="align-middle">Index</h2>
</div>

<div class="alert-success">
    
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Word)
        </th>
