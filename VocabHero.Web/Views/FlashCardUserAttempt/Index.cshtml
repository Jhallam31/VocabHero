            @Html.DisplayNameFor(model => model.AttemptSuccessful)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.XPGained)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
