@model VocabHero.Models.FlashCard.FlashCardDetail


<!--Begin Detail Modal-->

@Html.AntiForgeryToken()
<div class="card bg-warning" style="margin:20%;">
    @Html.HiddenFor(model => model.FlashCardId)
    <h3 class="text-center text-capitalize">@Html.DisplayFor(model => model.Word)</h3>
    <p class="text-center">(@Html.DisplayFor(model => model.PartOfSpeech))</p>
    <br />
    <br />
    <br />
    <h5 class="text-center">@Html.DisplayFor(model => model.Definition) </h5>

    @if (User.Identity.IsAuthenticated)
    {
        <button class="btn-light">

            @Html.ActionLink("Add to Collection", "Create", "UserFlashCard", new { id = Model.FlashCardId }, null)
        </button>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")}
