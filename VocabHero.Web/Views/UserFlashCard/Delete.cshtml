@model VocabHero.Models.UserFlashCard.UserFlashCardDetail

@{
    ViewBag.Title = "Delete";
}


<div class="container align-content-center text-center" style="padding-top:5%;">
    <div class="row text-center justify-content-center">

        <div class="col-sm-4 align-content-center">
            <h3 style="font-size: -13vw;">Are you sure you want to delete this card?</h3>
            <div class="card bg-info" style="height:auto; padding:10px; width:22vw;min-width:195px;margin-bottom: 20px;">


                @Html.HiddenFor(model => model.UserCardId)

                <h4 class="text-center"> @Html.DisplayFor(model => model.Word)</h4>

                <p class="text-center"> @Html.DisplayFor(model => model.Definition)</p>


            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions align-content-center text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                </div>
                @Html.ActionLink("Back to List", "Index")
            }
        </div>
    </div>
</div>
